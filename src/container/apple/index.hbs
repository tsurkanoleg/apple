<div class="page">

	<div>
		<div class="header">
		{{#with header}}
			<header class="header__content">
				<div class="header__block">
					<img src="/svg/apple.svg" alt="apple" class="header__icon">
					<nav class="header__block">
						{{#each links}}
								<a href="{{url}}" class="header__links">{{text}}</a>
						{{/each}}
					</nav>
				</div>
				<div class="header__block">
					<img src="/svg/search.svg" alt="Search" class="header__icon">
					<img src="/svg/profile.svg" alt="Profile" class="header__icon">
				</div>
			</header>
		{{/with}}
		</div>
		<div class="header--sub">
			{{#with header}}
				<header class="header__content">
					{{#with ad}}
						<div class="header__content ">
							<div class="header__block header__block--sub">{{title}}</div>
							<div class="header__block header__block--sub">
								{{#with link}}
									<a href="{{url}}" class="header__links--sub">{{text}}</a>
								{{/with}}
								<img src="/svg/arrow.svg" alt="Arrow" class="header__icon">
							</div>
						</div>
					{{/with}}
				</header>
			{{/with}}
		</div>
	</div>

